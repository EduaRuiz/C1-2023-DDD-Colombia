{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@contexts/student-inscription/*": [
        "./src/subdomains/academic-programming/contexts/student-inscription/*"
      ],
      "@sofka/*": [
        "./src/shared/sofka/*"
      ],
      "@validations": [
        "./src/shared/validations"
      ],
    }
  }
}